{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [                
                "-o",
                "${fileDirname}/multilayer_perceptron",
                "-Iinclude",
                "-Isrc",
                "-g",
                "${fileDirname}/${fileBasename}",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Remove Executable",
            "type": "shell",
            "command": "rm",
            "args": [
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Check memory leaks",
            "type": "shell",
            "command": "valgrind",
            "args": [
                "--leak-check=full",
                "--show-leak-kinds=all",
                "--track-origins=yes",
                "--verbose",
                "--log-file=${fileDirname}/valgrind-out.txt",
                "--quiet",
                "${fileDirname}/multilayer_perceptron","demo"
            ],
        },
        {
            "label": "Make Build",
            "type": "shell",
            "command": "make",
            "args": [
              "file=${fileBasename}"
            ],
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build the project using Makefile."
        },{
            "label" : "Make Clean",
            "type" : "shell",
            "command" : "make",
            "args" : [
                "clean",
                "file=${fileBasename}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Clean the project using Makefile."
        },
        {
            "label": "Check memory leaks and make clean",
            "dependsOn": [
                "Check memory leaks",
                "Make Clean"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}

